extends layout

block content
  nav.navbar-default(role="navigation")
    div.container
      .navbar-header
        button(type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse")
          span.sr-only Toggle navigation
          span.icon-bar
          span.icon-bar
          span.icon-bar
        a.navbar-brand(href="/") Home

      // Collect the nav links, forms, and other content for toggling
      .collapse.navbar-collapse.navbar-ex1-collapse
        ul.nav.navbar-nav
          li.active
            a(href="") Pins
          li
            a(href="#") Maps
        ul.nav.navbar-nav.navbar-right
          li.dropdown
            a.dropdown-toggle(href="#" data-toggle="dropdown") My Profile 
              span(class="caret")
              ul.dropdown-menu
                li
                  a(href="#") My Profile
                li
                  a(href="#") My Pins
                li
                  a(href="#") My Comments
          li
            a(href="#") Logout 
              span(class="glyphicon glyphicon-off")
  div(class="container")
    h1= title
    //- div.container
    //-   div.row
    //-     div.col-md-3
    //-       div(style="text-align: center;") google map placeholder 
    //-     div.col-md-6
    div.panel
      .panel-default
      .panel-primary
        div.panel-heading
          div.container
            div.row
              div.col-md-6
                h3.panel-title= pin.pinTitle
              div.col-md-6
                div(id="pinTitle-info")
                  div
                    | by 
                    = pin.owner
                  div 
                    | on 
                    = pin.timestamp

        div.panel-body
          div.container
            div.row 
              div.col-md-3 
                div img/google maps placeholder
              div.col-md-9
                div(style="border-bottom: 1px solid #000;")
                  div= pin.content
                  div
                    | location lat: 
                    = pin.location.lattitude
                    |  long: 
                    = pin.location.longitude
                div.comments
                  div.comment
                    div.row
                      div.col-md-2 img placeholder
                      div.col-md-10
                        div
                          span.commentName commenter 
                          span.commentContent blah blah blah blah blah
                        div.commentInfo
                          | timestamp
                  div.comment
                    div.row
                      div.col-md-2 img placeholder
                      div.col-md-10
                        div
                          span.commentName commenter 
                          span.commentContent blah blah blah blah blah
                        div.commentInfo
                          | timestamp

  footer
    div(style="text-align: center;") Happinning&copy; 2014

